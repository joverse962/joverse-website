---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.jsx';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us">
  <div class="bg-gradient-to-r from-minsk via-crail to-minsk min-h-screen w-full flex flex-col relative overflow-x-hidden">
    
    <Header />

    <main class="flex-grow flex items-center justify-center p-6 pt-10 pb-10">
      <div class="max-w-6xl w-full grid grid-cols-1 md:grid-cols-2 gap-12 items-center relative z-10">
        
        <div class="space-y-8 animate-fade-in-left">
          <div>
            <h1 class="font-bungee text-5xl md:text-7xl text-ink-black mb-4 leading-tight">
              Contact us
            </h1>
            <p class="text-lg font- text-ink-black max-w-md opacity-90">
              If you want to reach us or have any question don't hesitate to reach us.
            </p>
          </div>

          <div class="space-y-6">
            <div class="flex items-center gap-4 group cursor-pointer">
              <div class="p-4 bg-ink-black border border-cool-sky/30 rounded-full text-icy-aqua group-hover:bg-crail group-hover:text-ink-black transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              </div>
              <div>
                <p class="font-bungee text-xs text-ink-black uppercase tracking-wider mb-1">Email</p>
                <a href="mailto:joverse962@gmail.com" class="text-xl md:text-2xl text-ink-black  transition-colors font-bold">
                  joverse962@gmail.com
                </a>
              </div>
            </div>

            <div class="flex items-center gap-4 group cursor-pointer">
              <div class="p-4 bg-ink-black border border-cool-sky/30 rounded-full text-icy-aqua group-hover:bg-crail group-hover:text-ink-black transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              </div>
              <div>
                <p class="font-bungee text-xs text-ink-black uppercase tracking-wider mb-1">Phone</p>
                <a href="tel:+962780147400" class="text-xl md:text-2xl text-ink-black transition-colors font-bold">
                  +962 78 014 7400
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-ink-black mt-24 backdrop-blur-sm p-8 rounded-2xl border border-icy-aqua/20 shadow-[0_0_40px_-10px_rgba(97,173,253,0.3)] hover:shadow-[0_0_50px_-10px_rgba(193,254,255,0.4)] transition-shadow duration-500">
          <ContactForm client:load />
        </div>

      </div>
    </main>
    
  </div>
  <Footer />
</Layout>