---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const projects = [
    {
        id: 'drone962',
        title: 'DRONE962',
        // keywords added, desc removed
        keywords: ['Embedded', '3D Design', 'C++', 'ESP32'],
        img: '/drones.jpg',
        link: '/drone962'
    },
    {
        id: 'esp-csi-tui-rs',
        title: 'ESP-CSI-TUI-RS',
        keywords: ['Rust', 'TUI', 'ESP32', 'Real-time'],
        img: '/tui.png',
        link: '/tui'
    },
    {
        id: 'blind-cam',
        title: 'BLIND-CAM',
        keywords: ['Computer Vision', 'Assistive Tech', 'AI', 'Hardware'],
        img: '/blindCam.png',
        link: '/tft'
    }
];
---

<Layout title="Home">
    
    <main class="pt-24 px-4 max-w-screen-2xl mx-auto font-bungee">
        <Header />

        <section class="relative mx-auto h-[600px] rounded-3xl overflow-hidden shadow-2xl mb-20 group">
            <video autoplay loop muted playsinline class="absolute w-full h-full object-cover opacity-80 transition duration-700 group-hover:scale-105">
                <source src="/hero.mp4" type="video/mp4" />
            </video>
            
            <div class="absolute inset-0 bg-gradient-to-t from-ink-black via-transparent to-ink-black/50 flex flex-col items-center justify-center text-center p-4">
                <h1 class="text-5xl md:text-8xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-hippie-blue to-crail drop-shadow-lg mb-6">
                    JOVERSE
                </h1>
                <p class="text-xl md:text-2xl max-w-2xl text-azure-mist font-light">
                    Redefining autonomous systems with precision engineering.
                </p>
            </div>
        </section>

        <section class="max-w-4xl mx-auto text-center space-y-8 mb-32">
            <h2 class="text-4xl font-bold text-Woodsmoke">What We Do</h2>
            <p class="text-lg leading-relaxed opacity-80 text-Woodsmoke">
                We bridge the gap between complex software and rugged hardware. From autonomous drone swarms to embedded Rust systems, we build the technology of tomorrow, today.
            </p>
        </section>

        <section class="max-w-7xl mx-auto mb-20">
            <div class="flex flex-col md:flex-row justify-between items-end mb-12 px-2">
                <div>
                    <h2 class="text-4xl font-bold text-ink-black mb-2">Our Projects</h2>
                    <p class="text-ink-black opacity-60">Engineering solutions for the real world.</p>
                </div>
                <a href="/projects" class="hidden md:block text-Woodsmoke hover:text-crail transition mt-4 md:mt-0">
                    View all projects &rarr;
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
            {projects.map((project, index) => (
                <a href={`${project.link}`} class="group relative block h-[450px] overflow-hidden rounded-3xl bg-ink-black border border-cool-sky/20 shadow-lg hover:shadow-icy-aqua/20 transition-all duration-500 hover:-translate-y-2">
                    
                    {/* Image Container */}
                    <div class="h-3/5 w-full overflow-hidden relative">
                        <div class="absolute inset-0 bg-gradient-to-t from-ink-black via-transparent to-transparent z-10 opacity-90"></div>
                        
                        <img 
                            src={project.img} 
                            alt={project.title} 
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-80" 
                            onerror="this.style.display='none'" 
                        />
                        
                        <div class="absolute inset-0 bg-[#0c2431] -z-10"></div>
                    </div>

                    {/* Content Container */}
                    <div class="absolute bottom-0 w-full p-8 flex flex-col justify-end h-full z-20 pointer-events-none">
                        
                        {/* Number Badge (Top Left of content area) */}
                        <div class="mb-auto opacity-0 group-hover:opacity-100 transition-opacity duration-500 transform -translate-y-4 group-hover:translate-y-0">
                            <span class="px-3 py-1 rounded-full border border-cool-sky/30 text-xs font-mono text-icy-aqua bg-ink-black/80 backdrop-blur-md">
                                0{index + 1}
                            </span>
                        </div>

                        <h3 class="text-2xl font-bold text-crail mb-4 group-hover:text-icy-aqua transition-colors">
                            {project.title}
                        </h3>
                        
                        {/* NEW: Keywords Section (Replaces Description) */}
                        <div class="flex flex-wrap gap-2 mb-6">
                            {project.keywords.map((keyword) => (
                                <span class="px-3 py-1 rounded-full border border-cool-sky/30 text-xs font-mono text-icy-aqua bg-ink-black/80 backdrop-blur-md">
                                    {keyword}
                                </span>
                            ))}
                        </div>

                        <div class="flex items-center text-azure-mist text-sm font-semibold group-hover:translate-x-2 transition-transform duration-300">
                            View Details
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </div>
                    </div>
                </a>
            ))}
        </div>

            <div class="mt-12 text-center md:hidden">
                 <a href="/projects" class="text-Woodsmoke hover:text-crail transition">View all projects &rarr;</a>
            </div>
        </section>

        <Footer />
    </main>

</Layout>