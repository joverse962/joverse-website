---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const projects = [
    {
        id: 'drone962',
        title: 'drone962',
        desc: 'Autonomous aerial surveillance system customized for local terrain usage.',
        img: '/drones.jpg',
    },
    {
        id: 'esp-csi-tui-rs',
        title: 'esp-csi-tui-rs',
        desc: 'Rust-based Terminal User Interface for visualizing ESP32 CSI data in real-time.',
        img: '/tui.jpg',
    },
    {
        id: 'blind-cam',
        title: 'blind-cam',
        desc: 'Assistive computer vision device providing auditory feedback for visually impaired users.',
        img: '/blindCam.jpg',
    }
];
---

<Layout title="Home">
    
    <main class="pt-24 px-4">
        <Header />

        <section class="relative max-w-7xl mx-auto h-[80vh] rounded-3xl overflow-hidden border border-cool-sky/20 shadow-2xl mb-20 group">
            <video autoplay loop muted playsinline class="absolute inset-0 w-full h-full object-cover opacity-60 transition duration-700 group-hover:scale-105">
                <source src="/hero.mp4" type="video/mp4" />
            </video>
            
            <div class="absolute inset-0 bg-gradient-to-t from-ink-black via-transparent to-ink-black/50 flex flex-col items-center justify-center text-center p-4">
                <h1 class="text-5xl md:text-8xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-icy-aqua to-cool-sky drop-shadow-lg mb-6">
                    JOVERSE
                </h1>
                <p class="text-xl md:text-2xl max-w-2xl text-azure-mist font-light">
                    Redefining autonomous systems with precision engineering.
                </p>
            </div>
        </section>

        <section class="max-w-4xl mx-auto text-center space-y-8 mb-32">
            <h2 class="text-4xl font-bold text-icy-aqua">What We Do</h2>
            <p class="text-lg leading-relaxed opacity-80 text-azure-mist">
                We bridge the gap between complex software and rugged hardware. From autonomous drone swarms to embedded Rust systems, we build the technology of tomorrow, today.
            </p>
        </section>

        <section class="max-w-7xl mx-auto mb-20">
            <div class="flex flex-col md:flex-row justify-between items-end mb-12 px-2">
                <div>
                    <h2 class="text-4xl font-bold text-icy-aqua mb-2">Our Projects</h2>
                    <p class="text-azure-mist opacity-60">Engineering solutions for the real world.</p>
                </div>
                <a href="/projects" class="hidden md:block text-cool-sky hover:text-icy-aqua transition mt-4 md:mt-0">
                    View all projects &rarr;
                </a>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                {projects.map((project, index) => (
                    <a href={`/projects/${project.id}`} class="group relative block h-[450px] overflow-hidden rounded-3xl bg-ink-black border border-cool-sky/20 shadow-lg hover:shadow-icy-aqua/20 transition-all duration-500 hover:-translate-y-2">
                        
                        <div class="h-3/5 w-full overflow-hidden relative">
                            <div class="absolute inset-0 bg-gradient-to-t from-ink-black via-transparent to-transparent z-10 opacity-90"></div>
                            
                            <img 
                                src={project.img} 
                                alt={project.title} 
                                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-80" 
                                onerror="this.style.display='none'" 
                            />
                            
                            <div class="absolute inset-0 bg-[#0c2431] -z-10"></div>
                        </div>

                        <div class="absolute bottom-0 w-full p-8 flex flex-col justify-end h-full z-20 pointer-events-none">
                            <div class="mb-auto opacity-0 group-hover:opacity-100 transition-opacity duration-500 transform -translate-y-4 group-hover:translate-y-0">
                                <span class="px-3 py-1 rounded-full border border-cool-sky/30 text-xs font-mono text-icy-aqua bg-ink-black/80 backdrop-blur-md">
                                    0{index + 1}
                                </span>
                            </div>

                            <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-icy-aqua transition-colors">
                                {project.title}
                            </h3>
                            
                            <p class="text-azure-mist opacity-70 text-sm leading-relaxed mb-6 line-clamp-2">
                                {project.desc}
                            </p>

                            <div class="flex items-center text-cool-sky text-sm font-semibold group-hover:translate-x-2 transition-transform duration-300">
                                View Details
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </div>
                        </div>
                    </a>
                ))}
            </div>

            <div class="mt-12 text-center md:hidden">
                 <a href="/projects" class="text-cool-sky hover:text-icy-aqua transition">View all projects &rarr;</a>
            </div>
        </section>

    </main>

    <Footer />
</Layout>