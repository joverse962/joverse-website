---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.astro';

// --- Data Structs ---

const pageContent = {
  hero: {
    title: "JOVERSE - ABOUT US",
    backgroundImage: "/hero.jpg", // Replace with your actual hero image path
  },
  mission: {
    title: "OUR MISSION",
    text: [
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Our team has our innovation to water-mrot welsion neeres and celalor mooetits.",
      "Our vision dolors sit amet. Mar sem mapbees, innovation and vision by ton creative develoomny and purting solvos non missions lates."
    ]
  }
};

const teamMembers = [
  {
    id: 1,
    name: "Maryam Odat",
    image: "/here.jpg", // Replace with actual image path
    bio: "Bio goes here. We are passionate about... Innovatiory cryptonerous facts, we contract, undersement considators, and equivalents, intonats, allows and more..."
  },
  {
    id: 2,
    name: "Abdullah Alawad",
    image: "/myself.jpg", // Replace with actual image path
    bio: "Bio goes here. We are passionate about... Innovatiory cryptonerous facts, we contract, undersement considators, and equivalents, intonats, allows and more..."
  }
];
---

<Layout title="About Us | Joverse">
  <Header client:load/>

  <main class="mt-10 w-full bg-gradient-to-r from-minsk via-crail to-minsk pb-10">
    
    <section class="relative w-full h-[500px] flex items-center justify-center overflow-hidden ">
      <div class="absolute rounded-3xl inset-0 z-0 mx-10 ">
        <img 
          src={pageContent.hero.backgroundImage} 
          alt="Office Background" 
          class="w-full h-full object-cover rounded-3xl"
        />
        <div class="absolute inset-0 bg-ink-black/60"></div>
      </div>

      <h1 class="relative z-10 text-5xl md:text-7xl font-bungee text-crail tracking-wide uppercase text-center px-4 drop-shadow-lg">
        {pageContent.hero.title}
      </h1>
    </section>

    <section class="py-20 px-4 md:px-8 max-w-7xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bungee text-ink-black text-center mb-16 uppercase">
        The Team
      </h2>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
        {teamMembers.map((member) => (
          <div class="flex flex-col sm:flex-row gap-6 items-start">
            <div class="shrink-0">
              <img 
                src={member.image} 
                alt={member.name} 
                class="w-40 h-40 md:w-48 md:h-48 object-cover rounded-lg bg-gray-300 shadow-md"
              />
            </div>
            
            <div class="flex flex-col gap-2">
              <h3 class="text-2xl font-bungee text-ink-black uppercase leading-none">
                {member.name}
              </h3>
              <p class="text-ink-black/80 font-mono text-sm leading-relaxed max-w-md">
                {member.bio}
              </p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="bg-ink-black py-20 mx-2 mb-10 md:mx-20 rounded-2xl px-4 relative overflow-hidden">
    
    <div class="absolute -left-10 top-1/2 ml-10 -translate-y-1/2 opacity-10 pointer-events-none">
        <svg 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 24 24" 
        fill="none" 
        stroke="white" 
        stroke-width="1" 
        class="w-[300px] h-[300px] text-ink-black"
        >
        <circle cx="12" cy="12" r="3" />
        <circle cx="12" cy="12" r="8" />
        <path d="M12 2V4M12 20V22M2 12H4M20 12H22" stroke-linecap="round"/>
        </svg>
    </div>

    <div class="max-w-4xl mx-auto relative z-10 ">
        <div class="flex items-center gap-4 mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 text-crail shrink-0">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z" />
        </svg>
        <h2 class="text-4xl md:text-5xl font-bungee text-crail uppercase">
            {pageContent.mission.title}
        </h2>
        </div>

        <div class="space-y-6 text-icy-aqua font-mono text-base md:text-lg leading-relaxed max-w-2xl">
        {pageContent.mission.text.map((paragraph) => (
            <p>{paragraph}</p>
        ))}
        </div>
    </div>
    </section>

  </main>
  <Footer />

</Layout>