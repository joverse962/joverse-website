---
import HeaderControls from './HeaderControls';

---

<header class="absolute top-4 max-w-screen-2xl mx-auto left-0 right-0 z-50 flex justify-center px-4">
    <nav class="w-full bg-ink-black/80 backdrop-blur-md border border-cool-sky/30 rounded-2xl shadow-lg px-6 flex justify-between items-center relative">
        
        <a href="/" class="group flex items-center gap-3 text-icy-aqua hover:text-cool-sky transition py-4">
            <img 
                src="/joverse-logo.png" 
                alt="Joverse Logo" 
                class="w-10 h-10 rounded-full group-hover:drop-shadow-[0_0_8px_rgba(56,189,248,0.5)] transition-all duration-300"
            />
            <span class="text-2xl font-bold tracking-widest">
                JOVERSE
            </span>
        </a>

        <div class="hidden md:flex gap-8 font-semibold text-sm items-center h-full">
            <a href="/" class="hover:text-cool-sky transition">Home</a>

            <div class="relative group h-full flex items-center">
                <button class="flex items-center gap-1 hover:text-cool-sky transition-colors py-6 cursor-pointer outline-none">
                    <span>Projects</span>
                    <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>

                <div class="absolute top-[80%] left-1/2 -translate-x-1/2 w-56 bg-ink-black border border-cool-sky/30 rounded-xl shadow-[0_10px_40px_-10px_rgba(0,0,0,0.5)] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50 overflow-hidden">
                    <ul class="py-2 text-gray-300">
                        <li>
                            <a href="/drone962" class="block px-4 py-3 hover:bg-cool-sky/10 hover:text-icy-aqua transition-colors">
                                drone962
                            </a>
                        </li>
                        <li>
                            <a href="/tui" class="block px-4 py-3 hover:bg-cool-sky/10 hover:text-icy-aqua transition-colors">
                                esp-csi-tui-rs
                            </a>
                        </li>
                        <li>
                            <a href="/blind-cam" class="block px-4 py-3 hover:bg-cool-sky/10 hover:text-icy-aqua transition-colors">
                                blind-cam
                            </a>
                        </li>
                        <div class="h-px bg-cool-sky/20 my-1 mx-2"></div>
                        <li>
                            <a href="/projects" class="block px-4 py-3 text-cool-sky hover:text-icy-aqua hover:bg-cool-sky/10 transition-colors text-xs font-bold uppercase tracking-wider">
                                View All
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <a href="/about-us" class="hover:text-cool-sky transition">About Us</a>
            <a href="/contact-us" class="hover:text-cool-sky transition">Contact</a>
        </div>

        <HeaderControls client:load/>
    </nav>
</header>